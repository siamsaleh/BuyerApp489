<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.RegisterVerificationActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:src="@drawable/img_alibaba"
        android:textAlignment="center"
        android:scaleType="centerInside"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/txtLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-light"
        android:text="Buyer"
        android:textAlignment="center"
        android:textColor="@color/color_red"
        android:textSize="20sp"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:text="For creating buyer account please contact with Alibaba facebook page. If you do not fill up the buyer registration form yet fill up now."
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerInParent="true"
            />

        <Button
            android:id="@+id/btRegForm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_custom"
            android:backgroundTint="@color/color_red"
            android:textColor="@color/color_white"
            android:text="Registration Form"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"

            app:layout_constraintTop_toBottomOf="@+id/txtTerms"
            />

    </LinearLayout>


    <Button
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@drawable/nav_custom"
        android:backgroundTint="@color/color_red"
        android:textColor="@color/color_white"
        android:text="Go to Facebook Page"
        android:textAllCaps="false"

        android:layout_alignParentBottom="true"
        />

</RelativeLayout>